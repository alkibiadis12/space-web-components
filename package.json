{
  "name": "space-tourism",
  "version": "1.0.0",
  "main": "public/js/bundle.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run esbuild-watch\" \"npm run serve\"",
    "esbuild-watch": "esbuild ./src/client/index.ts --bundle --outfile=./public/js/bundle.js --watch --sourcemap",
    "serve": "browser-sync start --server public --files \"public/*.html, public/js/*.js, public/css/*.css\" --no-ui --listen localhost",
    "build": "tsc && esbuild ./src/client/index.ts --bundle --outfile=./public/js/bundle.js --minify --sourcemap"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "browser-sync": "^3.0.3",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "esbuild": "0.24.0"
  }
}
